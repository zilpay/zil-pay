  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "keywords": [
    "blockchain",
    "zilliqa",
    "ZilPay",
    "dapp",
    "metamask"
