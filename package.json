{
  "name": "zil-pay",
  "version": "0.6.0",
  "description": "ZilPay browser Extension for zilliqa blockchain",
  "shortName": "ZilPay Zilliqa wallet",
  "private": false,
  "scripts": {
    "build": "npm run test:unit && cross-env NODE_ENV=production webpack --hide-modules",
